<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee webapp_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>getInfo</servlet-name>
        <servlet-class>json.example.getInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getInfo</servlet-name>
        <url-pattern>/getInfo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>updates</servlet-name>
        <servlet-class>json.example.UpdatesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updates</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

</web-app>